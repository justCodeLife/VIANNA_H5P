<!DOCTYPE html>
<html lang="fa" class="h5p-iframe">
<head>
    <meta charset="UTF-8">
    <title>VIANNA H5P</title>
    <link rel="stylesheet" href="/cache/core/core.min.css">
    <script src="/cache/core/core.min.js"></script>
    @if (ViewBag.css != null)
    {
        @foreach (var url in ViewBag.css)
        {
            <link rel="stylesheet" href="@url"/>
        }
    }
    @if (ViewBag.js != null)
    {
        @foreach (var url in ViewBag.js)
        {
            <script src="@url"></script>
        }
    }
    <script>
         window.H5PIntegration = @Html.Raw(ViewBag.H5PIntegration)
    </script>
</head>
<body>
@if (ViewBag.embed_type == "iframe")
{
    <div class="h5p-iframe-wrapper">
        <iframe id="h5p-iframe-@ViewBag.contentID" class="h5p-iframe" data-content-id="@ViewBag.contentID" style="height:1px" src="about:blank"
                frameBorder="0" scrolling="no">
        </iframe>
    </div>
}
else
{
    <div class="h5p-content" data-content-id="@ViewBag.contentID"></div>
}
</body>
</html>